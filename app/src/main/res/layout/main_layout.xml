<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical"
    android:weightSum="3">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:background="@drawable/border_inactive">

        <LinearLayout
            android:id="@+id/container_factory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp">

        </LinearLayout>
    </HorizontalScrollView>

    <FrameLayout
        android:id="@+id/container_consumer1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:background="@drawable/border_inactive"
        android:padding="10dp">
        <cn.leixiaoyue.draganddropdemo.DragDetectSpecView
            android:id="@+id/triangle_bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/triangle_bottom_inactive" />
        <cn.leixiaoyue.draganddropdemo.DragDetectSpecView
            android:id="@+id/triangle_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/triangle_top_inactive" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/container_consumer2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/border_inactive"
        android:orientation="horizontal">

    </LinearLayout>

</LinearLayout>